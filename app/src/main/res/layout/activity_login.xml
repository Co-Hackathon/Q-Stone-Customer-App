<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:src="@drawable/login_background"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_chevron_left_black_48dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"/>
    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:src="@drawable/logo2"
        android:id="@+id/logo"/>
    <Button
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:text="구글 계정으로 로그인"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        android:background="@drawable/rounded_blue_button"
        android:paddingVertical="10dp"
        android:textColor="#FFFF"
        android:textSize="16sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fontFamily="@font/nanum_bd"
        android:onClick="SignUpClick"
        android:layout_marginHorizontal="30dp"
        android:id="@+id/googleLogin"/>
    <EditText
        android:id="@+id/email"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:hint="이메일"
        android:background="@drawable/rounded"
        android:paddingLeft="20dp"
        android:padding="4dp"
        android:textSize="16sp"
        android:textColor="#000"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/googleLogin"
        android:fontFamily="@font/nanum_bd"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"/>

    <EditText
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:hint="패스워드"
        android:textColor="#000000"
        android:background="@drawable/rounded"
        android:paddingLeft="20dp"
        android:padding="4dp"
        android:textSize="16sp"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email"
        android:layout_marginHorizontal="30dp"
        android:fontFamily="@font/nanum_bd"
        android:layout_marginTop="10dp"
        android:id="@+id/pwd"/>

    <Button
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:text="이메일로 로그인"
        app:layout_constraintTop_toBottomOf="@+id/pwd"
        android:background="@drawable/rounded_gray_button"
        android:paddingVertical="10dp"
        android:elevation="4dp"
        android:textColor="#000"
        android:textSize="16sp"
        android:fontFamily="@font/nanum_bd"
        android:onClick="SignUpClick"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:id="@+id/emailLogin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailLogin"
        android:layout_marginTop="10dp"
        android:text="비밀번호를 잊으셨나요?"
        android:fontFamily="@font/nanum_bd"
        android:onClick="LoginClick"
        android:textColor="#FFFF"
        android:id="@+id/forgot_pwd"/>

</android.support.constraint.ConstraintLayout>