<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="12dp">

        <TextView
            android:id="@+id/beacon_title"
            style="@android:style/TextAppearance.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_marginLeft="4dp"
            android:transitionName="@string/notice_item_title"
            android:fontFamily="@font/nanum_bd"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/beacon_mac_address"
            style="@android:style/TextAppearance.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:transitionName="@string/notice_item_address"

            android:layout_marginTop="12dp"
            android:text="0,0,0.5."
            android:fontFamily="@font/nanum_bd"
            android:textColor="#000"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/beacon_title"
            app:layout_constraintTop_toTopOf="@+id/beacon_title"
            app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:layout_width="70dp"
        android:padding="8dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:text="결제하기"
        android:fontFamily="@font/nanum_bd"
        android:background="@drawable/rounded_blue_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
         />

</android.support.constraint.ConstraintLayout>
